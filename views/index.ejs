<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= data.siteTitle %></title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;700;900&display=swap" rel="stylesheet">
</head>
<body>
    <!-- Header -->
    <header>
        <div class="logo">G.</div>
        <button class="menu-toggle" id="menuToggle">☰</button>
        <nav class="nav-menu" id="navMenu">
            <ul>
                <li><a href="#home">Home</a></li>
                <li><a href="#about">About</a></li>
                <li><a href="#projects">Progetti</a></li>
                <li><a href="#contact">Contatti</a></li>
            </ul>
        </nav>
    </header>

    <!-- Hero Section -->
<!-- Hero Section with Image Slider -->
<section class="hero" id="home">
    <div class="hero-slider">
        <div class="slide active" data-bg="/images/hero-1.jpg">
            <div class="slide-overlay"></div>
        </div>
        <div class="slide" data-bg="/images/hero-2.jpg">
            <div class="slide-overlay"></div>
        </div>
        <div class="slide" data-bg="/images/hero-3.jpg">
            <div class="slide-overlay"></div>
        </div>
        <div class="slide" data-bg="/images/hero-4.jpg">
            <div class="slide-overlay"></div>
        </div>
    </div>
    
    <div class="hero-content">
        <h1 id="heroTitle"><%= data.hero.title %></h1>
        <p class="hero-subtitle" id="heroSubtitle">Creating extraordinary architectural experiences</p>
        <a href="#projects" class="cta-link" id="ctaLink">
            <%= data.hero.subtitle %><span class="arrow">⟶</span>
        </a>
    </div>
    
    <div class="nav-arrows">
        <button class="arrow-btn prev" id="prevBtn">‹</button>
        <button class="arrow-btn next" id="nextBtn">›</button>
    </div>
    
    <div class="slide-indicators">
        <span class="indicator active" data-slide="0"></span>
        <span class="indicator" data-slide="1"></span>
        <span class="indicator" data-slide="2"></span>
        <span class="indicator" data-slide="3"></span>
    </div>
    
    <div class="scroll-indicator">
        <div class="mouse">
            <div class="wheel"></div>
        </div>
    </div>
</section>

    <!-- About Section -->
    <section class="about" id="about">
        <div class="container">
            <div class="about-grid">
                <div class="about-image">
                    <img src="/images/architecture-image.jpg" alt="Architecture" loading="lazy">
                </div>
                <div class="about-text">
                    <p class="section-label"><%= data.about.sectionLabel %></p>
                    <h2><%= data.about.title %></h2>
                    <% data.about.paragraphs.forEach(paragraph => { %>
                        <p><%= paragraph %></p>
                    <% }); %>   
                    <a href="#projects" class="btn-portfolio">VIEW MY PORTFOLIO</a>
                </div>
            </div>
        </div>
    </section>

    <!-- Projects Section -->
    <section class="projects" id="projects">
        <div class="container">
            <h2>Progetti</h2>
            <div class="projects-grid" id="projectsGrid">
                <!-- Projects loaded via JavaScript -->
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer>
        <div class="container">
            <p>&copy; 2025 <%= data.siteTitle %></p>
        </div>
    </footer>

    <script src="/js/main.js"></script>
</body>
</html>
